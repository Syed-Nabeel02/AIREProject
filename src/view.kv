ScreenManager:
    Main_Screen:
    EA_Screen:
    Pre_AGP0_Screen
    AGP0_Screen
    Info_Screen

<Main_Screen>:
    name: "main"

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: './data/kivymd/background.jpg'

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.5

            MDBoxLayout:
                size_hint: 1, 0.2
            MDBoxLayout:
                MDBoxLayout:
                MDLabel:
                    id: title
                    text: "AIRE"
                    halign: 'center'
                    theme_text_color: "Custom"
                    text_color: "white"
                    font_style: "H2"
                MDBoxLayout:
        MDBoxLayout:
            MDBoxLayout:
            MDStackLayout:
                orientation: "tb-rl"
                padding: 10
                spacing: 15
                MDFillRoundFlatIconButton:
                    text: "Early Engagement"
                    icon: "file-document-edit"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1,0,0,.6
                    theme_icon_color: "Custom"
                    icon_color: 1,0,0,.6
                    font_style: "Subtitle1"
                    md_bg_color: "white"
                    on_press: root.manager.current = 'early_engagment'
                MDFillRoundFlatIconButton:
                    text: "Pre-AGP0"
                    icon: "file-document-edit"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1,0,0,.6
                    theme_icon_color: "Custom"
                    icon_color: 1,0,0,.6
                    font_style: "Subtitle1"
                    md_bg_color: "white"
                    on_press: root.manager.current = 'pre_agp0'
                MDFillRoundFlatIconButton:
                    text: "AGP0"
                    icon: "file-document-edit"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1,0,0,.6
                    theme_icon_color: "Custom"
                    icon_color: 1,0,0,.6
                    font_style: "Subtitle1"
                    md_bg_color: "white"
                    on_press: root.manager.current = 'agp0'
                MDFillRoundFlatIconButton:
                    text: "Info"
                    icon: "information-outline"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1,0,0,.6
                    theme_icon_color: "Custom"
                    icon_color: 1,0,0,.6
                    font_style: "Subtitle1"
                    md_bg_color: "white"
                    on_press: root.manager.current = 'info'
                MDFillRoundFlatIconButton:
                    text: "Exit"
                    icon: "exit-run"
                    size_hint: 1, None
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}
                    theme_text_color: "Custom"
                    text_color: 1,0,0,.6
                    theme_icon_color: "Custom"
                    icon_color: 1,0,0,.6
                    font_style: "Subtitle1"
                    md_bg_color: "white"
                    on_press: app.stop()
            MDBoxLayout:


<EA_Screen>:
    name: "early_engagment"

    BoxLayout:
        orientation: 'vertical'
        padding: 150
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: './data/kivymd/background.jpg'
        MDCard:
            padding: 50
            spacing: 10
            elevation: 3
            radius: [12,]
            orientation: 'vertical'
            MDBoxLayout:
                MDBoxLayout:
                    padding: 10
                    MDLabel:
                        text: "Input an Operation Plan"
                        halign: "left"
                        color: 1,0,0,.6
                    MDBoxLayout:
                        MDFillRoundFlatIconButton:
                            text: "File"
                            icon: "file"
                            theme_text_color: "Custom"
                            text_color: "white"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            font_style: "Subtitle1"
                            md_bg_color: 1,0,0,.3
                            on_press: app.prompt_path_to_current_op()
            MDBoxLayout:
                MDBoxLayout:
                    padding: 10
                    MDLabel:
                        text: "Start Generation"
                        halign: "left"
                        color: 1,0,0,.6
                    MDBoxLayout:
                        MDFillRoundFlatIconButton:
                            text: "Generate"
                            icon: "fountain-pen-tip"
                            theme_text_color: "Custom"
                            text_color: "white"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            font_style: "Subtitle1"
                            md_bg_color: 1,0,0,.3
                            on_press: app.show_dialog()
                            on_release: app.run_early_engagement_module()
            MDBoxLayout:
                MDBoxLayout:
                    padding: 10
                    MDLabel:
                        text: "Check Archive"
                        halign: "left"
                        color: 1,0,0,.6
                    MDBoxLayout:
                        MDFillRoundFlatIconButton:
                            text: "Open Archive"
                            icon: "folder"
                            theme_text_color: "Custom"
                            text_color: "white"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            font_style: "Subtitle1"
                            md_bg_color: 1,0,0,.3
                            on_press:  app.open_early_engagement_archive()
            MDBoxLayout:
                MDBoxLayout:
                    padding: 10
                    MDLabel:
                        text: "Return to Home"
                        halign: "left"
                        color: 1,0,0,.6
                    MDBoxLayout:
                        MDFillRoundFlatIconButton:
                            text: "Return"
                            icon: "home"
                            theme_text_color: "Custom"
                            text_color: "white"
                            theme_icon_color: "Custom"
                            icon_color: "white"
                            font_style: "Subtitle1"
                            md_bg_color: 1,0,0,.3
                            on_press: root.manager.current = 'main'

